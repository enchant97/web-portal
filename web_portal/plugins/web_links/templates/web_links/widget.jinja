{% extends "/shared/base.jinja2" %}
{% block title %}Web Links - Customise Widget{% endblock %}
{% block main %}
<form action="{{ url_for('.post_widget_add_link', widget_id=widget_id) }}" method="post">
    <h2>Add Link</h2>
    <label for="web_links-widget-link">Link</label>
    <select name="link-id" id="web_links-widget-link-id">
        {% for link in links %}
        <option value="{{ link.id }}">{{ link.name }}</option>
        {% endfor %}
    </select>
    <button type="submit">Add</button>
</form>

<ul>
    {% for link in added_links %}
    <li>{{ link.name }}, {{ link.url }}</li>
    {% endfor %}
</ul>

{% endblock %}
