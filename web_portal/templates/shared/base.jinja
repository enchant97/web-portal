{% extends "/shared/no-nav.jinja" %}
{% block nav %}
<a class="icon-bnt" href="{{ url_for('portal.portal') }}" title="Home">{{ macros.feather_img('home') }}</a>
{% if current_user.is_authenticated %}
<a class="icon-bnt" href="{{ url_for('settings.get_index') }}" title="Settings">{{ macros.feather_img('settings') }}</a>
<a class="icon-bnt" href="{{ url_for('login.get_logout') }}">{{ macros.feather_img('log-out') }}Log Out</a>
{% else %}
<a class="icon-bnt" href="{{ url_for('login.get_login') }}">{{ macros.feather_img('log-in') }}Log In</a>
{% endif %}
{% endblock %}
